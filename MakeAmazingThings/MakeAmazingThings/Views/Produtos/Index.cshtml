        <input type="submit" name="btPesquisa" value="Feminino" />
        <input type="submit" name="btPesquisa" value="Todos" />
    </div>
}

    <div class="row">
        @foreach (var item in Model)
    {

        <div class="col-sm-4" style="padding:4px 4px 4px 4px">
           
           <a href="~/imagens/@item.Fotografia" target="_blank">
            <img src="~/imagens/@item.Fotografia" class="img-responsive" style="width:75%" />
            </a>
            <p> @Html.DisplayFor(modelItem => item.Marca)</p>
            <p> @Html.DisplayFor(modelItem => item.NomeProd)</p>
            <p> @Html.DisplayFor(modelItem => item.Preco)€</p>
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </p>
            
        </div>
}
    </div>





