@model IEnumerable<MakeAmazingThings.Models.Produtos>

@{
    ViewBag.Title = "Produtos-MAT";
}

<h2>Lista de Produtos</h2>

<p>
    @Html.ActionLink("Adicionar novo produto", "Create")
